#!/usr/bin/make -f
%:
	dh --with quilt $@

override_dh_auto_configure:
	autoreconf --install --force
	dh_auto_configure

override_dh_installinit:
	cp scripts/init.d/cgconfig debian/cgroup-bin.cgconfig.init
	cp scripts/init.d/cgred    debian/cgroup-bin.cgred.init
	dh_installinit --name cgconfig
	dh_installinit --name cgred

override_dh_install:
	mkdir -p debian/tmp/lib/security
	cp debian/tmp/usr/lib/pam_cgroup.so.0.0.0 debian/tmp/lib/security/pam_cgroup.so
	dh_install

override_dh_makeshlibs:
	dh_makeshlibs -X pam_cgroup.so

override_dh_strip:
	chrpath -d debian/cgroup-bin/usr/bin/cgclassify
	chrpath -d debian/cgroup-bin/usr/bin/cgcreate
	chrpath -d debian/cgroup-bin/usr/bin/cgexec
	chrpath -d debian/cgroup-bin/usr/bin/cgset
	chrpath -d debian/cgroup-bin/usr/sbin/cgclear
	chrpath -d debian/cgroup-bin/usr/sbin/cgconfigparser
	chrpath -d debian/cgroup-bin/usr/sbin/cgrulesengd
	chrpath -d debian/libcgroup1/usr/lib/libcgroup.so.1.0.34
	chrpath -d debian/libpam-cgroup/lib/security/pam_cgroup.so
	dh_strip
